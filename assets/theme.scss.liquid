  transition: $transition;
}

a, button, .btn {
  @include transition(all .2s ease-in);
}

/*================ Header ================*/
.site-header {
  position: relative;
  
  .site-nav--announcement-bar {
    background-color: $colorPrimary;
    padding: 6px 0;
    color: $colorSecondary;
    font-weight: normal;
    font-size: 12px;
  }
  
  .site-nav--logo-cart{
  	background-color: $colorSecondary;
    padding: 25px 0;
    color: $colorPrimary;
    text-transform: uppercase;
    font-weight: normal;
    font-size: 14px;

    .cart-count{
      font-weight: bold;
      color: #DF1312;
    }
    .icon{
      font-size: 24px;
      top: 3px;
      position: relative;
      padding-left: 20px;
    }
  }

  .site-nav--mobile {
    display: inline-block;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    -ms-transform: translateY(-50%);
    -webkit-transform: translateY(-50%);

    &.site-nav__menu {
      left: 10px;
    }

    &.site-nav__cart {
      right: 10px;
    }

    .site-nav__link {
      font-size: 20px;
      line-height: 1;
      text-transform: uppercase;
      font-weight: bold;
    }
  }

  .site-header__logo {
    max-width: 168px;

    @include at-query ($min, $medium) {
      max-height: 96px;
    }

    @include at-query ($min, $large) {
      max-height: 96px;
      margin: 0;
    }
  }
}

/*================ Heros ================*/
.hero{
  margin-bottom: 60px;
  
  .hero__content{
    min-height: 600px;
    width: 100%;
    background-image: url({{ 'hero.jpg' | file_img_url: 'master' }});
    background-size: cover;
    
    .wrapper{
      top:125px;
      position: relative;
      padding-left: 20px;
      padding-left: 60px;
    }
    .hero__title{
      font-family: 'Roboto Condensed Bold', Helvetica, Arial, sans-serif;
      font-size: 80px;
      color: #fff;
      letter-spacing: -3px;
      line-height: 80px;
    }
    .hero__text{
      font-family: Helvetica, Arial, sans-serif;
      font-size: 12px;
      color: #fff;
      letter-spacing: 1.25px;
    }
    .hero__btn{
      font-size: 16px;
      color: #fff;
      background-color: #DF1312;
      padding: 15px 50px;
    }
  }
}

/*================ Drawers ================*/
.drawer {
  .drawer__header {
    border-color: #333;

    .drawer__title {
      color: #fff;
    }

    .drawer__close {
      color: #fff;

      button {
        font-size: 19px;
      }
    }
  }

  .mobile-nav__item {
    background: none;

    &:after {
      border-color: #333;
    }

    &.mobile-nav__item-last {
      margin-bottom: 20px;
    }

    &.mobile-nav__search {
      input {
        border: none;
      }
    }

    a {
      color: #fff;
    }

    .mobile-nav__toggle-open,
    .mobile-nav__toggle-close {
      color: #fff;
      line-height: 0;

      &:active,
      &:hover,
      &:focus {
        background: none;
      }
    }

    .mobile-nav__sublist {
      li {
        &:after {
          border: none;
        }

        &:last-child {
          margin-bottom: 25px;
        }

        a {
          padding: 3px 30px;
        }
      }
    }
  }

  .mobile-nav__sublink {
    font-size: 15px;

    &:after {
      border: none;
    }

    &.mobile-nav__sublink--last {
      margin-bottom: 25px;
    }

    a {
      color: #fff;
      padding: 2px 0 2px 15px;
    }
  }
}

/*================ Footer ================*/
.site-footer {
  padding: 30px 0;

  .site-footer__copyright {
    display: block;
    margin-top: 30px;
  }
}

/*================ Collection ================*/
.collection__item {
  h3 {
    font-size: 16px;
    margin-bottom: 0;

    @include at-query ($min, $medium) {
      font-size: 20px;
    }
  }

  p {
    font-size: 14px;

    @include at-query ($min, $medium) {
      font-size: 16px;
    }

    s {
      margin-left: 5px;
    }
  }
}

/*================ Product ================*/
.product-single {
  h1 {
    font-size: 25px;
    margin-bottom: 0;

    @include at-query ($min, $medium) {
      font-size: 40px;
    }
  }

  form {
    position: relative;
  }
  
  .product-single__anchor{
    position: relative;

    span{
      position: absolute;
      right: 0;
      color: #fff;
      padding: 3px 15px;
      font-weight: bold;
      font-size: 12px;
    }
    
    .product-single__sold-out{
      background-color: #000;
    } 
    .product-single__savings{
      background-color: #DF1312;
    } 
  }

  .product-single__meta {
    margin-bottom: 10px;

    .product-single__price {
      font-size: 20px;
      display: inline-block;

      @include at-query ($min, $medium) {
        font-size: 30px;
      }
    }

    .product-single__price--compare {
      margin-left: 10px;
      text-decoration: line-through;
      opacity: 0.6;
    }
  }

