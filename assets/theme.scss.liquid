/*================ Cart ================*/
.cart__table {
  border-top: 1px solid #e3e3e3;
  margin-bottom: 0;

  .cart__row {
    display: block;
    padding: 15px;
    border-bottom: 1px solid #e3e3e3;
    border-top: none;

    @include at-query ($min, $medium) {
      padding: 30px 0;
      display: table-row;
    }

    td {
      border: none;
      padding: 5px;
      width: 100%;
      display: block;

      @include at-query ($min, $medium) {
        width: auto;
        padding: 20px 0;
        display: table-cell;
      }
    }

    .cart__item-image {
      display: block;
      margin: 10px auto;
      max-width: 200px;

      @include at-query ($min, $medium) {
        margin: 10px 0 10px 0;
      }
    }

    .cart__item-title {
      color: #222;
      line-height: 18px;
      padding-top: 10px;

      @include at-query ($min, $medium) {
        padding-top: 0;
      }

      @include at-query ($min, $large) {
        font-size: 20px;
      }
    }

    .cart__item-meta {
      @include at-query ($min, $medium) {
        padding-left: 15px;
      }
    }

    .cart__item-price {
      font-weight: 600;

      @include at-query ($min, $large) {
        display: table-cell;
      }
    }

    .cart__item-remove,
    small {
      display: block;
    }

    .js-qty,
    input {
      float: none;
      max-width: none;
      background-color: #fff;
      margin: 5px auto 10px auto;
      width: 100px;

      @include at-query ($min, $medium) {
        display: inline-block;
        float: right;
        margin: 0;
      }

      @include at-query ($min, $large) {
        margin: 0;
        float: left;
      }
    }
  }
}

.cart__total-section {
  margin-top: 15px;
  border-top: none;

  @include at-query ($min, $large) {
    margin-top: 30px;
  }

  .cart__subtotal-title,
  .cart__subtotal {
    font-size: 18px;
    font-weight: 600;
  }

  .cart__update-btn,
  .cart__checkout-btn {
    display: block;
    width: 100%;
    margin-bottom: 10px;

    @include at-query ($min, $small) {
      display: inline-block;
    }

    @include at-query ($min, $medium) {
      width: auto;
    }
  }
}

.cart__empty {
  margin: 70px 0;
}
